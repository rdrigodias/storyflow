import React from 'react';
import filme from "../../assets/Filme-Cinematográfico.png";
import fotografia from "../../assets/Fotografia.png";
import modern from "../../assets/Realismo-Moderno.png";
import closeup from "../../assets/Close-up.png";
import portrait from "../../assets/Portrait.png";

import cartoon from "../../assets/Desenho-Animado.png";
import toon from "../../assets/Toon-Shader.png";
import anime from "../../assets/Anime.png";
import quadrinhos from "../../assets/Quadrinhos-dos-EUA.png";
import noir from "../../assets/Noir-Comic.png";
import watercolor from "../../assets/Aquarela-Watercolor.png";
import oleo from "../../assets/Pintura-a-Óleo.png";

import cyberpunk from "../../assets/Cyberpunk.png";
import terror from "../../assets/Terror.png";
import assustadora from "../../assets/Foto-Assustadora.png";
import biblico from "../../assets/Bíblico.png";
import jurassico from "../../assets/Jurássico.png";
import prehist from "../../assets/Pré-histórico.png";


interface ImageStyleSelectorProps {
  selectedStyle: string;
  onStyleChange: (style: string) => void;
  isDisabled: boolean;
}

const styles = [
  { name: "Filme Realista", group: "REALISTA E CINEMATOGRÁFICO", imageUrl: filme },
  { name: "Fotografia", group: "REALISTA E CINEMATOGRÁFICO", imageUrl: fotografia },
  { name: "Realismo Moderno", group: "REALISTA E CINEMATOGRÁFICO", imageUrl: modern },
  { name: "Close-up", group: "REALISTA E CINEMATOGRÁFICO", imageUrl: closeup },
  { name: "Portrait", group: "REALISTA E CINEMATOGRÁFICO", imageUrl: portrait },

  { name: "Desenho Animado", group: "ILUSTRAÇÃO / ANIMAÇÃO", imageUrl: cartoon },
  { name: "Toon Shader", group: "ILUSTRAÇÃO / ANIMAÇÃO", imageUrl: toon },
  { name: "Anime", group: "ILUSTRAÇÃO / ANIMAÇÃO", imageUrl: anime },
  { name: "Quadrinhos dos EUA", group: "ILUSTRAÇÃO / ANIMAÇÃO", imageUrl: quadrinhos },
  { name: "Noir Comic", group: "ILUSTRAÇÃO / ANIMAÇÃO", imageUrl: noir },
  { name: "Aquarela", group: "ILUSTRAÇÃO / ANIMAÇÃO", imageUrl: watercolor },
  { name: "Pintura a Óleo", group: "ILUSTRAÇÃO / ANIMAÇÃO", imageUrl: oleo },

  { name: "Cyberpunk", group: "TEMÁTICOS", imageUrl: cyberpunk },
  { name: "Terror", group: "TEMÁTICOS", imageUrl: terror },
  { name: "Foto Assustadora", group: "TEMÁTICOS", imageUrl: assustadora },
  { name: "Bíblico", group: "TEMÁTICOS", imageUrl: biblico },
  { name: "Jurássico", group: "TEMÁTICOS", imageUrl: jurassico },
  { name: "Pré-histórico", group: "TEMÁTICOS", imageUrl: prehist },
];

const groupedStyles = styles.reduce((acc, style) => {
    if (!acc[style.group]) {
        acc[style.group] = [];
    }
    acc[style.group].push(style);
    return acc;
}, {} as Record<string, typeof styles>);

export function ImageStyleSelector({ selectedStyle, onStyleChange, isDisabled }: ImageStyleSelectorProps) {
    return (
        <div className={`bg-gray-900/50 p-4 rounded-lg border border-gray-700 space-y-4 ${isDisabled ? 'opacity-50 cursor-not-allowed' : ''}`}>
            {Object.entries(groupedStyles).map(([group, options]) => (
                <div key={group}>
                    <h3 className="text-md font-semibold text-gray-400 mb-3">{group}</h3>
                    <div className="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
                        {options.map(option => {
                            const isSelected = selectedStyle === option.name;
                            return (
                                <button
                                    key={option.name}
                                    type="button"
                                    onClick={() => !isDisabled && onStyleChange(option.name)}
                                    disabled={isDisabled}
                                    className={`relative rounded-lg overflow-hidden border-2 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-indigo-500 ${isSelected ? 'border-indigo-500' : 'border-gray-600 hover:border-gray-500'}`}
                                    aria-pressed={isSelected}
                                >
                                    <img src={option.imageUrl} alt={option.name} className="w-full h-full object-cover aspect-video" />
                                    <div className="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
                                    <p className="absolute bottom-1 left-2 right-2 text-xs font-semibold text-white text-center truncate">{option.name}</p>
                                    {isSelected && (
                                        <div className="absolute top-1 right-1 bg-indigo-500 rounded-full h-5 w-5 flex items-center justify-center">
                                            <svg xmlns="http://www.w3.org/2000/svg" className="h-3 w-3 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" strokeWidth={3}>
                                                <path strokeLinecap="round" strokeLinejoin="round" d="M5 13l4 4L19 7" />
                                            </svg>
                                        </div>
                                    )}
                                </button>
                            );
                        })}
                    </div>
                </div>
            ))}
        </div>
    );
}
